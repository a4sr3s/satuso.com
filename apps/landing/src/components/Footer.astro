---
import { Icon } from "astro-icon/components";
import { SITE } from "../config/site.mjs";
---

<footer
  class="w-full py-12 px-4 border-t border-gray-200 bg-white"
  role="contentinfo"
>
  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <div>
        <h2 class="text-xl font-bold text-gray-900 mb-4">Satuso</h2>
        <p class="text-gray-600">
          Sales tracking for solopreneurs and small teams. Never lose a deal again.
        </p>
      </div>
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Product</h2>
        <ul class="space-y-2">
          <li>
            <a
              href="#features"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >Features</a>
          </li>
          <li>
            <a
              href="#pricing"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >Pricing</a>
          </li>
          <li>
            <a
              href={`${SITE.appUrl}/login`}
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >Sign In</a>
          </li>
        </ul>
      </div>
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Company</h2>
        <ul class="space-y-2">
          <li>
            <a
              href="/about"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >About</a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >Contact</a>
          </li>
          <li>
            <a
              href="/privacy"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >Privacy</a>
          </li>
        </ul>
      </div>
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Connect</h2>
        <ul class="space-y-2">
          <li>
            <a
              href="https://twitter.com/satuso"
              class="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on Twitter (opens in new tab)"
            >
              <Icon name="tabler:brand-twitter" class="w-5 h-5" aria-hidden="true" />
              <span>Twitter</span>
            </a>
          </li>
          <li>
            <a
              href="https://linkedin.com/company/satuso"
              class="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Follow us on LinkedIn (opens in new tab)"
            >
              <Icon name="tabler:brand-linkedin" class="w-5 h-5" aria-hidden="true" />
              <span>LinkedIn</span>
            </a>
          </li>
          <li>
            <a
              href="mailto:hello@satuso.com"
              class="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
            >
              <Icon name="tabler:mail" class="w-5 h-5" aria-hidden="true" />
              <span>hello@satuso.com</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="pt-8 border-t border-gray-200 text-center text-gray-600">
      <p>&copy; {new Date().getFullYear()} Satuso. All rights reserved.</p>
    </div>
  </div>
</footer>
