---
import ScrollReveal from "./ScrollReveal.tsx";
import VideoModal from "./VideoModal.tsx";
import { Icon } from "astro-icon/components";
import { SITE } from "../config/site.mjs";

// Demo video ID (YouTube)
const DEMO_VIDEO_ID = "wCMJZjinJ-w";
---

<section class="relative overflow-hidden bg-gradient-to-b from-blue-50 via-white to-white" aria-labelledby="hero-heading">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-50 animate-blob"></div>
    <div class="absolute -top-40 -left-40 w-80 h-80 bg-blue-200 rounded-full mix-blend-multiply filter blur-3xl opacity-50 animate-blob animation-delay-2000"></div>
    <div class="absolute top-40 left-1/2 w-80 h-80 bg-pink-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-6xl mx-auto px-4 py-20 md:py-28">
    <div class="text-center mb-12">
      <ScrollReveal client:load>
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium mb-6">
          <Icon name="tabler:sparkles" class="w-4 h-4" aria-hidden="true" />
          <span>Built for solopreneurs & small teams</span>
        </div>
      </ScrollReveal>

      <ScrollReveal client:load delay={0.1}>
        <h1 id="hero-heading" class="text-5xl md:text-7xl font-bold text-gray-900 mb-6 tracking-tight">
          Never Lose a<br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600">
            Deal Again
          </span>
        </h1>
      </ScrollReveal>

      <ScrollReveal client:load delay={0.2}>
        <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
          Track leads, automate follow-ups, and close more sales â€” all in one place.
          <span class="text-gray-900 font-medium">Ditch the spreadsheets.</span>
        </p>
      </ScrollReveal>

      <ScrollReveal client:load delay={0.3}>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`${SITE.appUrl}/login`}
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-xl hover:from-blue-700 hover:to-purple-700 transition-all font-semibold shadow-lg shadow-blue-500/25 hover:shadow-xl hover:shadow-blue-500/30 hover:-translate-y-0.5"
          >
            <span>Get Started</span>
            <Icon name="tabler:arrow-right" class="w-5 h-5" aria-hidden="true" />
          </a>
          <VideoModal client:load videoId={DEMO_VIDEO_ID} />
        </div>
      </ScrollReveal>
    </div>

    <!-- Dashboard Preview -->
    <ScrollReveal client:load delay={0.4}>
      <div class="relative mx-auto max-w-5xl mt-8">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl blur-2xl opacity-20 transform scale-95"></div>
        <div class="relative bg-white rounded-2xl shadow-2xl border border-gray-200 overflow-hidden">
          <!-- Browser chrome -->
          <div class="flex items-center gap-2 px-4 py-2.5 bg-gray-100 border-b border-gray-200">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full bg-red-400"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <div class="flex-1 mx-4">
              <div class="bg-white rounded-md px-3 py-1 text-xs text-gray-400 text-center border border-gray-200">
                app.satuso.com
              </div>
            </div>
          </div>
          <!-- App with sidebar -->
          <div class="flex">
            <!-- Sidebar -->
            <div class="w-48 bg-gray-900 text-white p-4 hidden sm:block">
              <div class="flex items-center gap-2 mb-6">
                <img src="/icon.svg" alt="" class="h-6 w-6" />
                <span class="text-lg font-bold">Satuso</span>
              </div>
              <nav class="space-y-1">
                <div class="flex items-center gap-2 px-3 py-2 bg-gray-800 rounded-lg text-sm">
                  <div class="w-4 h-4 bg-gray-600 rounded"></div>
                  <span>Dashboard</span>
                </div>
                <div class="flex items-center gap-2 px-3 py-2 text-gray-400 text-sm hover:text-white">
                  <div class="w-4 h-4 bg-gray-700 rounded"></div>
                  <span>Pipeline</span>
                </div>
                <div class="flex items-center gap-2 px-3 py-2 text-gray-400 text-sm hover:text-white">
                  <div class="w-4 h-4 bg-gray-700 rounded"></div>
                  <span>Contacts</span>
                </div>
                <div class="flex items-center gap-2 px-3 py-2 text-gray-400 text-sm hover:text-white">
                  <div class="w-4 h-4 bg-gray-700 rounded"></div>
                  <span>Companies</span>
                </div>
                <div class="flex items-center gap-2 px-3 py-2 text-gray-400 text-sm hover:text-white">
                  <div class="w-4 h-4 bg-gray-700 rounded"></div>
                  <span>Tasks</span>
                </div>
              </nav>
            </div>
            <!-- Main content -->
            <div class="flex-1 p-3 sm:p-5 bg-gray-50">
              <!-- Header -->
              <div class="mb-4">
                <h2 class="text-lg font-semibold text-gray-900">Dashboard</h2>
                <p class="text-xs text-gray-500">Welcome back! Here's your sales overview.</p>
              </div>
              <!-- Metrics -->
              <div class="grid grid-cols-2 sm:grid-cols-4 gap-2 sm:gap-3 mb-4">
                <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                  <div class="text-[9px] sm:text-[10px] text-gray-500 mb-0.5">Revenue (This Month)</div>
                  <div class="text-base sm:text-xl font-bold text-gray-900">$12.4k</div>
                  <div class="text-[9px] sm:text-[10px] text-green-600">+18% vs last month</div>
                </div>
                <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                  <div class="text-[9px] sm:text-[10px] text-gray-500 mb-0.5">Active Deals</div>
                  <div class="text-base sm:text-xl font-bold text-gray-900">24</div>
                  <div class="text-[9px] sm:text-[10px] text-green-600">+3 this week</div>
                </div>
                <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                  <div class="text-[9px] sm:text-[10px] text-gray-500 mb-0.5">Conversion Rate</div>
                  <div class="text-base sm:text-xl font-bold text-gray-900">32%</div>
                  <div class="text-[9px] sm:text-[10px] text-green-600">+5% vs last month</div>
                </div>
                <div class="bg-white p-2 sm:p-3 rounded-lg border border-gray-200">
                  <div class="text-[9px] sm:text-[10px] text-gray-500 mb-0.5">Tasks Due Today</div>
                  <div class="text-base sm:text-xl font-bold text-orange-600">3</div>
                  <div class="text-[9px] sm:text-[10px] text-gray-500">2 follow-ups</div>
                </div>
              </div>
              <!-- Two column layout -->
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-2 sm:gap-3">
                <!-- Activity -->
                <div class="sm:col-span-2 bg-white rounded-lg border border-gray-200 p-2 sm:p-3">
                  <div class="text-xs font-semibold text-gray-900 mb-2">Recent Activity</div>
                  <div class="space-y-2">
                    <div class="flex items-center gap-2 text-xs">
                      <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center">
                        <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                      </div>
                      <div class="flex-1">
                        <span class="font-medium">You</span> moved <span class="text-blue-600">Acme Corp</span> to Qualified
                      </div>
                      <span class="text-gray-400">2h ago</span>
                    </div>
                    <div class="flex items-center gap-2 text-xs">
                      <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                      </div>
                      <div class="flex-1">
                        <span class="font-medium">You</span> closed deal with <span class="text-blue-600">TechFlow</span>
                      </div>
                      <span class="text-gray-400">5h ago</span>
                    </div>
                    <div class="flex items-center gap-2 text-xs">
                      <div class="w-6 h-6 bg-purple-100 rounded-full flex items-center justify-center">
                        <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                      </div>
                      <div class="flex-1">
                        <span class="font-medium">You</span> added note to <span class="text-blue-600">GlobalSoft</span>
                      </div>
                      <span class="text-gray-400">1d ago</span>
                    </div>
                  </div>
                </div>
                <!-- Pipeline Summary -->
                <div class="bg-white rounded-lg border border-gray-200 p-2 sm:p-3">
                  <div class="text-xs font-semibold text-gray-900 mb-2">Pipeline</div>
                  <div class="space-y-2">
                    <div class="flex items-center justify-between text-xs">
                      <div class="flex items-center gap-1.5">
                        <div class="w-2 h-2 bg-slate-400 rounded-full"></div>
                        <span>Lead</span>
                      </div>
                      <span class="font-medium">$7.5k</span>
                    </div>
                    <div class="flex items-center justify-between text-xs">
                      <div class="flex items-center gap-1.5">
                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                        <span>Qualified</span>
                      </div>
                      <span class="font-medium">$15k</span>
                    </div>
                    <div class="flex items-center justify-between text-xs">
                      <div class="flex items-center gap-1.5">
                        <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                        <span>Proposal</span>
                      </div>
                      <span class="font-medium">$22k</span>
                    </div>
                    <div class="flex items-center justify-between text-xs">
                      <div class="flex items-center gap-1.5">
                        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        <span>Negotiation</span>
                      </div>
                      <span class="font-medium">$18k</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </ScrollReveal>
  </div>
</section>

<style>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -30px) scale(1.1); }
    50% { transform: translate(-20px, 20px) scale(0.9); }
    75% { transform: translate(30px, 10px) scale(1.05); }
  }
  .animate-blob {
    animation: blob 8s infinite ease-in-out;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
