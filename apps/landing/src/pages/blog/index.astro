---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";
import { SITE } from "../../config/site.mjs";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const [featured, ...rest] = posts;
const slugify = (id: string) => id.replace(/\.mdx?$/, "");
---

<Layout
  title="Blog — Sales Tips & CRM Insights | Satuso"
  description="Practical sales tips, CRM strategies, and closing techniques for solopreneurs and small teams."
  canonicalURL={`${SITE.url}/blog`}
  ogType="website"
>
  <Header />
  <main id="main-content" role="main" class="flex-1">
    <!-- Hero header -->
    <section class="relative overflow-hidden bg-gradient-to-b from-blue-50 via-white to-white">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30"></div>
        <div class="absolute -top-20 -left-40 w-80 h-80 bg-blue-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30"></div>
      </div>
      <div class="relative max-w-6xl mx-auto px-4 pt-16 pb-12 text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium mb-6">
          <Icon name="tabler:notebook" class="w-4 h-4" aria-hidden="true" />
          <span>Sales Tips & Insights</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
          The Satuso Blog
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
          Practical advice on sales pipelines, closing techniques, and CRM strategies — built for solopreneurs and small teams.
        </p>
      </div>
    </section>

    <section class="max-w-6xl mx-auto px-4 pb-20">
      {featured && (
        <!-- Featured post -->
        <a
          href={`/blog/${slugify(featured.id)}`}
          class="group block mb-12"
        >
          <article class="relative bg-white rounded-2xl border border-gray-200 overflow-hidden shadow-sm hover:shadow-lg transition-all hover:-translate-y-0.5">
            <div class="p-8 md:p-12">
              <div class="flex items-center gap-3 mb-4">
                <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full text-xs font-medium">
                  <Icon name="tabler:star" class="w-3 h-3" aria-hidden="true" />
                  Latest
                </span>
                <time
                  datetime={featured.data.pubDate.toISOString()}
                  class="text-sm text-gray-500"
                >
                  {featured.data.pubDate.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              </div>
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                {featured.data.title}
              </h2>
              <p class="text-gray-600 text-lg mb-5 max-w-3xl">
                {featured.data.description}
              </p>
              <div class="flex items-center justify-between">
                {featured.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {featured.data.tags.map((tag: string) => (
                      <span class="text-xs bg-gray-100 text-gray-600 px-3 py-1 rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                <span class="inline-flex items-center gap-1.5 text-sm font-medium text-blue-600 group-hover:gap-2.5 transition-all">
                  Read article
                  <Icon name="tabler:arrow-right" class="w-4 h-4" aria-hidden="true" />
                </span>
              </div>
            </div>
          </article>
        </a>
      )}

      {rest.length > 0 && (
        <!-- Post grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {rest.map((post) => (
            <a
              href={`/blog/${slugify(post.id)}`}
              class="group block"
            >
              <article class="bg-white rounded-xl border border-gray-200 p-6 h-full flex flex-col hover:shadow-md hover:-translate-y-0.5 transition-all">
                <time
                  datetime={post.data.pubDate.toISOString()}
                  class="text-sm text-gray-400 mb-3"
                >
                  {post.data.pubDate.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
                <h2 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors leading-snug">
                  {post.data.title}
                </h2>
                <p class="text-sm text-gray-600 mb-4 flex-1 leading-relaxed">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between mt-auto pt-4 border-t border-gray-100">
                  {post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-1.5">
                      {post.data.tags.slice(0, 2).map((tag: string) => (
                        <span class="text-xs bg-gray-100 text-gray-500 px-2 py-0.5 rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                  <span class="inline-flex items-center gap-1 text-sm font-medium text-blue-600 group-hover:gap-2 transition-all">
                    Read
                    <Icon name="tabler:arrow-right" class="w-3.5 h-3.5" aria-hidden="true" />
                  </span>
                </div>
              </article>
            </a>
          ))}
        </div>
      )}

      {posts.length === 0 && (
        <p class="text-gray-500 text-center py-12">No posts yet. Check back soon!</p>
      )}
    </section>
  </main>
  <Footer />
</Layout>
