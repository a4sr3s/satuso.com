---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`Contact Sales - ${SITE.name}`}
  description="Book a call with the Satuso team to learn how we can help you close more deals."
  canonicalURL={`${SITE.url}/contact-sales`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="relative overflow-hidden bg-gradient-to-b from-blue-50 via-white to-white">
      <!-- Decorative background elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-50"></div>
        <div class="absolute -top-40 -left-40 w-80 h-80 bg-blue-200 rounded-full mix-blend-multiply filter blur-3xl opacity-50"></div>
      </div>

      <div class="relative max-w-4xl mx-auto px-4 py-20 md:py-28">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
            Let's Talk
          </h1>
          <p class="text-xl text-gray-600 max-w-xl mx-auto">
            Book a 30-minute call with our team to see how Satuso can help you close more deals.
          </p>
        </div>

        <!-- Cal.com Embed -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden p-4 md:p-8">
          <div id="cal-embed" style="min-height: 600px; width: 100%;"></div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script is:inline>
  (function (C, A, L) {
    let p = function (a, ar) {
      a.q.push(ar);
    };
    let d = C.document;
    C.Cal =
      C.Cal ||
      function () {
        let cal = C.Cal;
        let ar = arguments;
        if (!cal.loaded) {
          cal.ns = {};
          cal.q = cal.q || [];
          d.head.appendChild(d.createElement("script")).src = A;
          cal.loaded = true;
        }
        if (ar[0] === L) {
          const api = function () {
            p(api, arguments);
          };
          const namespace = ar[1];
          api.q = api.q || [];
          if (typeof namespace === "string") {
            cal.ns[namespace] = cal.ns[namespace] || api;
            p(cal.ns[namespace], ar);
            p(cal, ["initNamespace", namespace]);
          } else p(cal, ar);
          return;
        }
        p(cal, ar);
      };
  })(window, "https://app.cal.com/embed/embed.js", "init");

  Cal("init", { origin: "https://cal.com" });
  Cal("inline", {
    elementOrSelector: "#cal-embed",
    calLink: "satuso/30min",
    layout: "month_view",
  });
  Cal("ui", {
    hideEventTypeDetails: false,
    layout: "month_view",
  });
</script>
