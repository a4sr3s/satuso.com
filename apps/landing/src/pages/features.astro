---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import FeaturesComponent from "../components/Features.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`Features | ${SITE.title}`}
  description="Explore Satuso's sales tracking features: AI-powered insights, visual pipeline management, SPIN selling methodology, deal teams, custom workboards, and analytics dashboards for solopreneurs and small teams."
  canonicalURL={`${SITE.url}/features`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="max-w-6xl mx-auto px-4 py-20">
      <ScrollReveal client:idle>
        <h1 class="text-5xl font-bold text-gray-900 mb-4">Features</h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.1}>
        <p class="text-xl text-gray-600 mb-12">
          Powerful sales tools that help solopreneurs and small teams stay organized, follow up on time, and close more deals.
        </p>
      </ScrollReveal>
      <FeaturesComponent />
    </section>
  </main>
  <Footer />
</Layout>
